<div class="chat-item">
    <div class="chat-item__avatar"></div>
    <div class="chat-item__info info">
        <div class="chat-item__info-title">
            <h3>{{name}}</h3>
            <div class="info__meta">
                <div class="info__status"></div>
                <div class="info__time"></div>
            </div>
        </div>
        <div class="chat-item__info-subtitle subtitle">
            <p class="subtitle__last-message">{{lastMessage}}</p>
        </div>
    </div>
</div>